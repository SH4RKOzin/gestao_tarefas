<?php
include("");

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $email = $_POST['email'];
    $user = $_POST['user'];
    $senha = md5($_POST['senha']); // Avoid using md5 for password hashing, consider using password_hash

    $stmt = $conn->prepare("INSERT INTO usuarios (email, user, pass) VALUES (?, ?, ?)");
    $stmt->bind_param("sss", $email, $user, $senha);

    if ($stmt->execute()) {
        $user_id = $stmt->insert_id;
        $sql = "CREATE TABLE usuario_{$user_id}_tarefas (
            id INT AUTO_INCREMENT PRIMARY KEY,
            tarefa VARCHAR(255) NOT NULL,
            data_inicio DATE,
            data_fim DATE,
            estado ENUM('pendente', 'concluida', 'nao_iniciada') DEFAULT 'nao_iniciada'
        )";
        if ($conn->query($sql) === TRUE) {
            header("Location: login.php");
            exit;
        } else {
            echo "Erro ao criar tabela: " . $conn->error;
        }
    } else {
        echo "Erro ao cadastrar usuário: " . $stmt->error;
    }

    $stmt->close();
}
$conn->close();
?>

</body>
</html>

