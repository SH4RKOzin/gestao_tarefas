<?php
include("");
session_start();
if (!isset($_SESSION['user_id'])) {
    header("Location: login.php");
    exit();
}

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $user_id = $_SESSION['user_id'];
    $tarefa = $_POST['tarefa'];
    $data_inicio = $_POST['data_inicio'];
    $data_fim = $_POST['data_fim'];
    $estado = $_POST['estado'];

    $stmt = $conn->prepare("INSERT INTO usuario_{$user_id}_tarefas (tarefa, data_inicio, data_fim, estado) VALUES (?, ?, ?, ?)");
    $stmt->bind_param("ssss", $tarefa, $data_inicio, $data_fim, $estado);

    if ($stmt->execute()) {
        header("Location: index.php");
    } else {
        echo "Erro ao criar tarefa: " . $stmt->error;
    }

    $stmt->close();
    $conn->close();
}
?>

</html>

//editar_tarefa.php
<!DOCTYPE html>
<html>
<head>
    <title>Editar Tarefa</title>
    <link rel="stylesheet" href="criarConta.css">
    <link href="S4 LOGO.png" rel="icon">
</head>
<body>
<?php
include("");
session_start();
if (!isset($_SESSION['user_id'])) {
    header("Location: login.php");
    exit();
}
$user_id = $_SESSION['user_id'];
$tarefa_id = $_GET['id'];

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $tarefa = $_POST['tarefa'];
    $data_inicio = $_POST['data_inicio'];
    $data_fim = $_POST['data_fim'];
    $estado = $_POST['estado'];

    $stmt = $conn->prepare("UPDATE usuario_{$user_id}_tarefas SET tarefa = ?, data_inicio = ?, data_fim = ?, estado = ? WHERE id = ?");
    $stmt->bind_param("ssssi", $tarefa, $data_inicio, $data_fim, $estado, $tarefa_id);

    if ($stmt->execute()) {
        header("Location: index.php");
        exit;
    } else {
        echo "Erro ao atualizar tarefa: " . $stmt->error;
    }

    $stmt->close();
} else {
    $result = $conn->query("SELECT * FROM usuario_{$user_id}_tarefas WHERE id = $tarefa_id");
    $tarefa = $result->fetch_assoc();
}
?>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="editar_tarefa.php?id=<?php echo $tarefa_id; ?>" method="POST" class="p-4 border shadow-lg rounded form-container">
                <div class="text-center mb-4">
                    <img src="S4 LOGO.png" alt="S4 Logo" width="200" height="200">
                    <h1 class="mt-3">Faça Login</h1>
                </div>
                <div class="mb-3">
                    <label for="tarefa" class="form-label">Tarefa</label>
                    <input type="text" class="form-control" name="tarefa" id="tarefa" required value="<?php echo htmlspecialchars($tarefa['tarefa']); ?>">
                </div>
                <div class="mb-3">
                    <label for="data_inicio" class="form-label">Data de inicio</label>
                    <input type="date" class="form-control" name="data_inicio" id="data_inicio" required value="<?php echo htmlspecialchars($tarefa['data_inicio']); ?>">
                </div>
                <div class="mb-3">
                    <label for="data_fim" class="form-label">Data de fim</label>
                    <input type="date" class="form-control" name="data_fim" id="data_fim" required value="<?php echo htmlspecialchars($tarefa['data_fim']); ?>">
                </div>
                <div class="mb-3">
                    <label for="estado" class="form-label">Disabled select menu</label>
                    <select id="estado" class="form-select" name="estado">
                        <option value="nao_iniciada" <?php if ($tarefa['estado'] == 'nao_iniciada') echo 'selected'; ?>>Não Iniciada</option>
                        <option value="pendente" <?php if ($tarefa['estado'] == 'pendente') echo 'selected'; ?>>Pendente</option>
                        <option value="concluida" <?php if ($tarefa['estado'] == 'concluida') echo 'selected'; ?>>Concluída</option>
                    </select>
                </div
                  <input type="submit" value="Criar Tarefa">
            </form>
            
        </div>
    </div>
</div>

</body>
</html>

<?php
$conn->close();
?>


//perfil.php
<?php
session_start(); // Inicia a sessão se ainda não estiver iniciada

// Verifica se o usuário está logado
if (!isset($_SESSION['user_id'])) {
    // Redireciona para a página de login se não estiver logado
    header('Location: login.php');
    exit;
}

include('');

// Recupera o ID do usuário logado da sessão
$userId = $_SESSION['user_id'];

// Consulta para recuperar os dados do usuário
$query = "SELECT * FROM usuarios WHERE id = $userId";
$result = mysqli_query($conn, $query);

if ($result && mysqli_num_rows($result) > 0) {
    $row = mysqli_fetch_assoc($result);

    // Verifica se o formulário foi submetido (método POST)
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        // Obtém os dados do formulário
        $userId = $_POST['userId'];
        $nome = $_POST['nome'];
        $email = $_POST['email'];
        $senha = $_POST['senha']; // Nota: Recomenda-se hash ou utilizar método seguro para salvar senhas

        // Prepara e executa a consulta para atualizar os dados do usuário
        $sql = "UPDATE usuarios SET email=?, nome=?, senha=? WHERE id=?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("sssi", $email, $nome, $senha, $userId);
        $stmt->execute();

        // Verifica se a atualização foi bem-sucedida
        if ($stmt->affected_rows > 0) {
            // Atualização bem-sucedida
            $_SESSION['success_message'] = "Perfil atualizado com sucesso.";
        } else {
            // Caso não haja mudanças ou ocorra algum erro
            $_SESSION['error_message'] = "Erro ao atualizar perfil.";
        }

        // Fecha o statement
        $stmt->close();

        // Redireciona para evitar o reenvio do formulário ao atualizar a página
        header('Location: perfil.php');
        exit;
    }
} else {
    echo "<p class='text-danger text-center mt-5'>Usuário não encontrado.</p>";
}
?>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>
    <!-- Incluir o CSS do Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Estilos personalizados -->
